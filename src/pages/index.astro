---
import Layout from '../layouts/Layout.astro';
import { GameOptionsContainer } from '../components/GameOptionsContainer';
---

<Layout title="AniQ - Anime Character Quiz Game">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-5xl font-bold mb-6 bg-gradient-to-r from-accent to-purple-500 bg-clip-text text-transparent">
      Welcome to AniQ
    </h1>
    <p class="text-xl mb-12 text-gray-300">
      Test your anime knowledge with our progressive character quiz game!
    </p>

    <GameOptionsContainer client:load />

    <div class="bg-secondary p-6 rounded-lg mt-12">
      <h2 class="text-2xl font-semibold mb-4">How to Play</h2>
      <ul class="text-left space-y-2 text-gray-300">
        <li>• Choose your game options or select a preset</li>
        <li>• Answer questions within the time limit</li>
        <li>• Use lifelines when you're stuck</li>
        <li>• Build your streak and climb the leaderboard</li>
      </ul>
    </div>
  </div>
</Layout> 